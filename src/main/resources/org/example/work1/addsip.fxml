<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_LEFT" prefHeight="515.0" prefWidth="565.0" spacing="10" stylesheets="@addsip.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.work1.SIPController">
    <children>
        <HBox spacing="10">
            <Label text="Search Mutual Fund:">
            <HBox.margin>
               <Insets top="15.0" />
            </HBox.margin></Label>
            <TextField fx:id="fundSearchField" prefWidth="200" promptText="Type to search mutual fund...">
            <HBox.margin>
               <Insets top="10.0" />
            </HBox.margin></TextField>
        </HBox>
      <HBox prefHeight="210.0" prefWidth="383.0">
         <children>
              <ListView fx:id="fundListView" prefHeight="150" prefWidth="390.0" visible="false" />
         </children>
         <VBox.margin>
            <Insets right="20.0" />
         </VBox.margin>
      </HBox>

        <!-- Other fields for SIP investment -->
        <HBox>
            <Label text="SIP Amount:" />
            <TextField fx:id="sipAmountField" prefHeight="26.0" prefWidth="208.0">
            <HBox.margin>
               <Insets left="10.0" />
            </HBox.margin></TextField>
         <VBox.margin>
            <Insets />
         </VBox.margin>
        </HBox>
        <HBox>
            <Label text="Frequency :" />
            <ChoiceBox fx:id="frequencyChoiceBox" prefHeight="26.0" prefWidth="207.0">
            <HBox.margin>
               <Insets left="15.0" />
            </HBox.margin></ChoiceBox>
         <VBox.margin>
            <Insets />
         </VBox.margin>
        </HBox>
        <HBox>
            <Label text="Start Date:" />
            <DatePicker fx:id="startDatePicker" prefHeight="26.0" prefWidth="209.0">
            <HBox.margin>
               <Insets left="18.0" />
            </HBox.margin></DatePicker>
         <VBox.margin>
            <Insets />
         </VBox.margin>
        </HBox>
        <HBox>
            <Label text="End Date:" />
            <DatePicker fx:id="endDatePicker" prefHeight="26.0" prefWidth="214.0">
            <HBox.margin>
               <Insets left="20.0" />
            </HBox.margin></DatePicker>
         <VBox.margin>
            <Insets />
         </VBox.margin>
        </HBox>
        <HBox>
            <Label text="NAV:" />
            <Label fx:id="navLabel" />
         <VBox.margin>
            <Insets />
         </VBox.margin>
        </HBox>
        <HBox>
            <Label text="Total Units:" />
            <Label fx:id="totalUnitsLabel" />
         <VBox.margin>
            <Insets />
         </VBox.margin>
        </HBox>
      <HBox prefHeight="36.0" prefWidth="381.0">
         <children>
              <Button onAction="#handleSIPInvestment" prefHeight="36.0" prefWidth="118.0" text="Invest">
               <HBox.margin>
                  <Insets left="100.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
    </children>
   <padding>
      <Insets left="100.0" />
   </padding>
</VBox>
