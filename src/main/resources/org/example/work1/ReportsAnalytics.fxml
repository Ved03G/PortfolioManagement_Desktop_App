<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.work1.ReportsAnalyticsController">
   <children>
      <Pane prefHeight="600.0" prefWidth="200.0" styleClass="login-container2" stylesheets="@style.css">
         <children>
            <Button fx:id="btnPortfolio" layoutY="119.0" onAction="#handlePortfolioButtonClick" prefHeight="50.0" prefWidth="200.0" styleClass="sidebar-button" text="Portfolio Management" />
            <Button fx:id="btnSIP" layoutY="169.0" onAction="#handlesipclick" prefHeight="50.0" prefWidth="200.0" styleClass="sidebar-button" text="SIP Management" />
            <Button fx:id="btnMutualFunds" layoutY="219.0" onAction="#handlemutualfundclick" prefHeight="50.0" prefWidth="200.0" styleClass="sidebar-button" text="Mutual Funds" />
            <Button fx:id="btnReports" layoutY="269.0" onAction="#handlereportsclick" prefHeight="50.0" prefWidth="200.0" styleClass="sidebar-button" text="Reports &amp; Analytics" />
            <Button fx:id="btnTransactions" layoutY="319.0" onAction="#handletransactionclick" prefHeight="50.0" prefWidth="200.0" styleClass="sidebar-button" text="Transaction History" />
            <Button fx:id="btnProfile" layoutY="369.0" onAction="#handleprofileclick" prefHeight="50.0" prefWidth="200.0" styleClass="sidebar-button" text="User Profile" />
            <Label layoutX="4.0" layoutY="66.0" prefHeight="53.0" prefWidth="194.0" styleClass="header-label" text=" Client Dashboard">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <ImageView fitHeight="50.0" fitWidth="196.0" layoutX="4.0" layoutY="14.0">
               <image>
                  <Image url="@icons/INVESTMATE (3).png" />
               </image>
            </ImageView>
         </children>
      </Pane>
      <Pane layoutX="200.0" prefHeight="600.0" prefWidth="700.0" styleClass="main-content-pane" stylesheets="@style.css">
         <children>
            <Label layoutX="20.0" layoutY="14.0" styleClass="header-label" text="Reports &amp; Analytics" />

            <!-- Portfolio Summary Section -->
            <Label layoutX="20.0" layoutY="50.0" styleClass="summary-label" text="Total Portfolio Value: $150,000" />
            <Label layoutX="20.0" layoutY="80.0" styleClass="summary-label" text="Total Returns: $25,000" />
            <Label layoutX="20.0" layoutY="110.0" styleClass="summary-label" text="Net Profit: $10,000" />

            <!-- Pie Chart for Investment Allocation -->
            <Label layoutX="20.0" layoutY="150.0" styleClass="section-label" text="Investment Allocation:" />
            <PieChart fx:id="portfolioPieChart" layoutX="20.0" layoutY="180.0" prefHeight="200.0" prefWidth="300.0" />

            <!-- Line Chart for Investment Growth Over Time -->
            <Label layoutX="350.0" layoutY="150.0" styleClass="section-label" text="Investment Growth Over Time:" />
            <LineChart fx:id="lineChartGrowth" layoutX="350.0" layoutY="180.0" prefHeight="200.0" prefWidth="300.0">
               <xAxis>
                  <CategoryAxis label="Months" />
               </xAxis>
               <yAxis>
                  <NumberAxis label="Portfolio Value ($)" />
               </yAxis>
            </LineChart>

            <!-- Bar Chart for Monthly Returns -->
            <Label layoutX="20.0" layoutY="400.0" styleClass="section-label" text="Monthly Returns:" />
            <BarChart fx:id="barChartReturns" layoutX="20.0" layoutY="430.0" prefHeight="150.0" prefWidth="630.0">
               <xAxis>
                  <CategoryAxis label="Month" />
               </xAxis>
               <yAxis>
                  <NumberAxis label="Returns ($)" />
               </yAxis>
            </BarChart>
         </children>
      </Pane>
   </children>
</AnchorPane>
