<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.TextField?>
<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.work1.UserProfileController">
   <children>
      <Pane prefHeight="600.0" prefWidth="200.0" styleClass="login-container" stylesheets="@style.css">
         <children>
            <Button fx:id="btnPortfolio" layoutY="119.0" onAction="#handlePortfolioButtonClick" prefHeight="50.0" prefWidth="200.0" styleClass="sidebar-button" text="Portfolio Management" />
            <Button fx:id="btnSIP" layoutY="169.0" onAction="#handlesipclick" prefHeight="50.0" prefWidth="200.0" styleClass="sidebar-button" text="SIP Management" />
            <Button fx:id="btnMutualFunds" layoutY="219.0" onAction="#handlemutualfundclick" prefHeight="50.0" prefWidth="200.0" styleClass="sidebar-button" text="Mutual Funds" />
            <Button fx:id="btnReports" layoutY="269.0" onAction="#handlereportsclick" prefHeight="50.0" prefWidth="200.0" styleClass="sidebar-button" text="Reports &amp; Analytics" />
            <Button fx:id="btnTransactions" layoutY="319.0" onAction="#handletransactionclick" prefHeight="50.0" prefWidth="200.0" styleClass="sidebar-button" text="Transaction History" />
            <Button fx:id="btnProfile" layoutY="369.0" onAction="#handleprofileclick" prefHeight="50.0" prefWidth="200.0" styleClass="sidebar-button" text="User Profile" />
            <Label layoutX="4.0" layoutY="66.0" prefHeight="53.0" prefWidth="194.0" styleClass="header-label" text=" Client Dashboard">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <ImageView fitHeight="50.0" fitWidth="196.0" layoutX="4.0" layoutY="14.0">
               <image>
                  <Image url="@icons/INVESTMATE (3).png" />
               </image>
            </ImageView>
         </children>
      </Pane>
      <Pane layoutX="200.0" prefHeight="600.0" prefWidth="700.0" styleClass="main-content-pane">
         <children>
            <Label layoutX="20.0" layoutY="14.0" text="User Profile" styleClass="header-label"/>

            <!-- User Profile Information -->
            <Label layoutX="20.0" layoutY="60.0" text="Full Name:"/>
            <TextField fx:id="fullNameField" layoutX="150.0" layoutY="60.0" prefWidth="300.0" editable="false"/>

            <Label layoutX="20.0" layoutY="110.0" text="Email:"/>
            <TextField fx:id="emailField" layoutX="150.0" layoutY="110.0" prefWidth="300.0" editable="false"/>

            <Label layoutX="20.0" layoutY="160.0" text="Phone Number:"/>
            <TextField fx:id="phoneField" layoutX="150.0" layoutY="160.0" prefWidth="300.0" editable="false"/>

            <Label layoutX="20.0" layoutY="210.0" text="Address:"/>
            <TextField fx:id="addressField" layoutX="150.0" layoutY="210.0" prefWidth="300.0" editable="false"/>

            <Label layoutX="20.0" layoutY="260.0" text="User Role:"/>
            <TextField fx:id="roleField" layoutX="150.0" layoutY="260.0" prefWidth="300.0" editable="false"/>

            <!-- Action Buttons -->
            <Button fx:id="btnEditProfile" layoutX="20.0" layoutY="320.0" text="Edit Profile"/>
            <Button fx:id="btnChangePassword" layoutX="150.0" layoutY="320.0" text="Change Password"/>

            <!-- Profile Picture (Optional) -->
            <ImageView fx:id="profilePicture" fitHeight="150.0" fitWidth="150.0" layoutX="500.0" layoutY="60.0">
               <image>
                  <Image url="@icons/icons8-user-100.png" />
               </image>
            </ImageView>

            <!-- Button to Upload Profile Picture -->
            <Button fx:id="btnUploadPicture" layoutX="500.0" layoutY="220.0" text="Upload Picture"/>
         </children>
      </Pane>
   </children>
</AnchorPane>
